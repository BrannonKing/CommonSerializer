    <TargetFrameworks>netstandard1.4</TargetFrameworks>
    <AssemblyName>CommonSerializer.Newtonsoft.Json</AssemblyName>
    <PackageId>CommonSerializer.Newtonsoft.Json</PackageId>
    <PackageTags>serializer serialization common newtonsoft json.net</PackageTags>
